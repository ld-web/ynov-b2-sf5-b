{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('category_item', {'id': category.id}) }}">{{ category.name }}</a>
                 ({{ category.articles|length }} articles)
            </li>
        {% else %}
            <li>Aucune catégorie trouvée</li>
        {% endfor %}
    </ul>
{% endblock %}
